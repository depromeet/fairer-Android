<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.depromeet.housekeeper.ui.MainFragment"
        android:label="mainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_SelectSpaceFragment"
            app:destination="@id/SelectSpaceFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out">
            <argument
                android:name="selectDate"
                app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        </action>

        <action
            android:id="@+id/action_mainFragment_to_addDirectTodoFragment"
            app:destination="@id/addDirectTodoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out">
            <argument
                android:name="viewType"
                app:argType="com.depromeet.housekeeper.model.enums.ViewType" />
            <argument
                android:name="houseWork"
                app:argType="com.depromeet.housekeeper.model.HouseWork" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/SelectSpaceFragment"
        android:name="com.depromeet.housekeeper.ui.SelectSpaceFragment"
        android:label="SelectSpaceFragment"
        tools:layout="@layout/fragment_select_space">
        <argument
            android:name="selectDate"
            app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        <action
            android:id="@+id/action_SelectSpaceFragment_to_addHouseWorkFramgent"
            app:destination="@id/addHouseWorkFramgent"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="spaceChores"
                app:argType="com.depromeet.housekeeper.model.SpaceChores" />
            <argument
                android:name="selectDate"
                app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        </action>

        <action
            android:id="@+id/action_SelectSpaceFragment_to_addDirectTodoFragment"
            app:destination="@id/addDirectTodoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="viewType"
                app:argType="com.depromeet.housekeeper.model.enums.ViewType" />
            <argument
                android:name="selectDate"
                app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        </action>


    </fragment>

    <fragment
        android:id="@+id/addDirectTodoFragment"
        android:name="com.depromeet.housekeeper.ui.AddDirectTodoFragment"
        android:label="addDirectTodoFragment"
        tools:layout="@layout/fragment_add_direct_todo">
        <argument
            android:name="viewType"
            app:argType="com.depromeet.housekeeper.model.enums.ViewType" />
        <argument
            android:name="selectDate"
            app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        <argument
            android:name="houseWork"
            app:argType="com.depromeet.housekeeper.model.HouseWork" />
        <action
            android:id="@+id/action_addDirectTodoFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@+id/mainFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/addHouseWorkFramgent"
        android:name="com.depromeet.housekeeper.ui.AddHouseWorkFramgent"
        android:label="addHouseWorkFramgent"
        tools:layout="@layout/fragment_add_house_work">
        <argument
            android:name="spaceChores"
            app:argType="com.depromeet.housekeeper.model.SpaceChores" />
        <argument
            android:name="selectDate"
            app:argType="com.depromeet.housekeeper.model.DayOfWeek" />
        <action
            android:id="@+id/action_addHouseWorkFramgent_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@+id/mainFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.depromeet.housekeeper.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>