<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_direct_todo_background_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_white_background"
        tools:context=".AddDirectTodoFragment">

        <include
            layout="@layout/layout_add_todo_header"
            android:id="@+id/add_direct_todo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_direct_todo_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_sign1"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_header" />

        <TextView
            android:id="@+id/add_direct_todo_space_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_space"
            android:textColor="@color/gray_700"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_sign_tv" />

        <TextView
            android:id="@+id/add_direct_todo_title_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_title"
            android:textColor="@color/gray_700"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_space_sign_tv" />

        <EditText
            android:id="@+id/add_direct_todo_title_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/main_inactive_stroke_background"
            android:hint="@string/add_direct_todo_title_hint"
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_title_sign_tv"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/add_direct_todo_time_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_time"
            android:textColor="@color/gray_700"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_title_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <CheckBox
            android:id="@+id/add_direct_todo_all_day_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/add_todo_default_time"
            android:textColor="@color/gray_700"
            android:buttonTint="@color/highlight"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_direct_todo_time_sign_tv"
            app:layout_constraintBottom_toBottomOf="@id/add_direct_todo_time_sign_tv"/>

        <com.depromeet.housekeeper.ui.custom.timepicker.FairerTimePicker
            android:id="@+id/add_direct_todo_time_picker"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_todo_item_no_input"
            android:theme="@style/FairerTimePicker"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_time_sign_tv"
            android:timePickerMode="spinner"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/add_direct_todo_day_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_day"
            android:textColorHint="@color/gray_700"
            android:layout_marginTop="26dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_time_picker"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_direct_todo_repeat_rv"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:choiceMode="multipleChoice"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/add_direct_todo_day_sign_tv"
            tools:listitem="@layout/item_todo_repeat_day_btn"/>

        <include
            android:id="@+id/add_direct_todo_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/layout_main_footer_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
