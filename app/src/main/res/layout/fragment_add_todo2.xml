<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.depromeet.housekeeper.ui.AddTodo2ViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_white_background"
        tools:context=".ui.AddTodoFragment2">

        <include
            layout="@layout/layout_add_todo_header"
            android:id="@+id/add_todo2_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_todo2_date_tv"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textColor="@color/gray_900"
            android:textStyle="bold"
            android:text="@{String.valueOf(vm.getDate())}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_header"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:drawableStartCompat="@drawable/ic_calendar_today" />

        <TextView
            android:id="@+id/add_todo2_space_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Caption"
            android:drawablePadding="4dp"
            android:textColor="@color/gray_900"
            android:textStyle="bold"
            android:text="@{String.valueOf(vm.bindingSpace())}"
            app:drawableStartCompat="@drawable/ic_space"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_todo2_date_tv"
            app:layout_constraintBottom_toBottomOf="@id/add_todo2_date_tv"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_todo_chore_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:choiceMode="singleChoice"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_date_tv"
            tools:listitem="@layout/item_recycler_add_todo_list"/>

        <TextView
            android:id="@+id/todo_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_time"
            android:textColor="@color/gray_700"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo_chore_list_rv"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/add_todo2_all_day_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_todo_default_time"
            android:textColor="@color/gray_700"
            android:buttonTint="@color/highlight"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/todo_time_tv"
            app:layout_constraintBottom_toBottomOf="@id/todo_time_tv" />

        <com.depromeet.housekeeper.ui.custom.timepicker.FairerTimePicker
            android:id="@+id/todo_time_picker"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_todo_item_no_input"
            android:theme="@style/FairerTimePicker"
            app:layout_constraintTop_toBottomOf="@id/todo_time_tv"
            android:timePickerMode="spinner"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/todo_repeat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_day"
            android:textColor="@color/gray_700"
            android:layout_marginTop="26dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/todo_time_picker"
            app:layout_constraintStart_toStartOf="parent" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/add_todo_repeat_rv"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:orientation="horizontal"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          android:choiceMode="multipleChoice"
          android:layout_marginHorizontal="15dp"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/todo_repeat_tv"
          tools:listitem="@layout/item_todo_repeat_day_btn"/>

        <include
            android:id="@+id/add_todo2_done_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/layout_main_footer_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
