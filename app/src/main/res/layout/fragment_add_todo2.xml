<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_white_background"
        tools:context=".AddTodoFragment2">

        <include
            layout="@layout/layout_add_todo_header"
            android:id="@+id/add_todo2_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_todo2_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_sign1"
            android:textColor="@color/gray_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_header"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

            <RadioGroup
                android:id="@+id/add_todo_filtering_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_todo2_sign_tv"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="설거지" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="냉장고 정리" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="음식물 쓰레기 버리기" />
            </RadioGroup>

        <TextView
            android:id="@+id/todo_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_time"
            android:textColor="@color/gray_700"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo_filtering_radio"
            app:layout_constraintStart_toStartOf="parent" />

        <TimePicker
            android:id="@+id/todo_time_picker"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/todo_time_tv"
            android:timePickerMode="spinner"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/add_todo2_batch_time_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_batch_time"
            android:textColor="@color/gray_200"
            android:buttonTint="@color/gray_100"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/todo_time_picker"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/todo_repeat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_direct_todo_day"
            android:textColor="@color/gray_700"
            android:layout_marginTop="26dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_batch_time_check_box"
            app:layout_constraintStart_toStartOf="parent" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/add_todo_repeat_rv"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:orientation="horizontal"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          android:choiceMode="multipleChoice"
          android:layout_marginHorizontal="15dp"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/todo_repeat_tv"
          tools:listitem="@layout/item_todo_repeat_day_btn"/>

        <include
            android:id="@+id/add_todo2_done_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/layout_main_footer_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
