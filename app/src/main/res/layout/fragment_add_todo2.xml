<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTodoFragment2">

        <include
            layout="@layout/layout_add_todo_header"
            android:id="@+id/add_todo2_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_todo2_page_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/gray_200"
            android:text="2/2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/add_todo2_choose_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_todo2_page_num_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="집안일의 상세내용을 선택해주세요"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/add_todo_filtering_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_todo2_choose_detail_tv"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="설거지" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="냉장고 정리" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/todo_filtering_selector"
                    android:textColor="@drawable/todo_filtering_text_selector"
                    android:button="@null"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center"
                    android:text="음식물 쓰레기 버리기" />
            </RadioGroup>

        <TextView
            android:id="@+id/todo_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집안일 시간"
            android:textColor="@color/gray_700"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo_filtering_radio"
            app:layout_constraintStart_toStartOf="parent" />

        <TimePicker
            android:id="@+id/todo_time_picker"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/todo_time_tv"
            android:timePickerMode="spinner"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/todo_repeat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집안일 반복"
            android:textColor="@color/gray_700"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/todo_time_picker"
            app:layout_constraintStart_toStartOf="parent" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/add_todo_repeat_rv"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:orientation="horizontal"
          android:choiceMode="multipleChoice"
          android:layout_marginHorizontal="15dp"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/todo_repeat_tv"
          tools:listitem="@layout/item_todo_repeat_day_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
