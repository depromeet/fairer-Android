<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_white_background"
        tools:context=".AddTodoFragment1">

        <include
            layout="@layout/layout_add_todo_header"
            android:id="@+id/add_todo1_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_todo1_sign1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_todo1_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/gray_700"
            android:text="@string/add_todo1_sign1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add_todo1_direct_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/add_todo1_direct_sign"
            android:layout_marginStart="20dp"
            android:layout_marginTop="360dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo1_sign1_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/add_todo1_go_direct_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/main_active_stroke_background"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/add_todo1_direct_sign_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/add_todo1_go_direct_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/active_blue"
            android:textSize="15sp"
            android:text="@string/add_todo1_direct_btn_text"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/add_todo1_go_direct_btn"
            app:layout_constraintTop_toTopOf="@id/add_todo1_go_direct_btn"
            app:layout_constraintBottom_toBottomOf="@id/add_todo1_go_direct_btn" />

        <include
            android:id="@+id/add_todo1_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/layout_main_footer_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


