<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <com.depromeet.housekeeper.ui.custom.timepicker.MonthPicker
            android:id="@+id/month_picker"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="26dp"
            android:theme="@style/MonthPickerTheme"
            android:descendantFocusability="blocksDescendants"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:gravity="center"
                android:background="@drawable/bg_solid_5"
                android:backgroundTint="@color/normal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fairer_dialog_cancel_btn_text"
                    android:textSize="11sp"
                    android:textColor="@color/gray_800"
                    android:textFontWeight="600"
                    />
            </LinearLayout>
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:gravity="center"
                android:background="@drawable/bg_solid_5"
                android:backgroundTint="@color/normal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fairer_dialog_ok_btn_text"
                    android:textSize="11sp"
                    android:textColor="@color/gray_800"
                    android:textFontWeight="600"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>