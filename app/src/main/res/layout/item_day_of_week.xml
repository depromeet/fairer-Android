<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isSelect"
            type="boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@{isSelect ? @drawable/bg_gray100_box : @drawable/main_white_background}"
            >
            <TextView
                android:id="@+id/tv_num_day"
                style="@style/Caption"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAlignment="center"
                android:textColor="@{isSelect ? @color/highlight : @color/gray_400}"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textStyle='@{isSelect ? "bold" : "normal"}'
                tools:text="13"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/tv_str_day"
                style="@style/Caption"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAlignment="center"
                android:textColor="@{isSelect ? @color/highlight : @color/gray_400}"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_num_day"
                app:textStyle='@{isSelect ? "bold" : "normal"}'
                tools:text="ê¸ˆ" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
