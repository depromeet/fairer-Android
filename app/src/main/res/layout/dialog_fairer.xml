<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_fairer_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.28"
            android:layout_marginHorizontal="24dp"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:background="@drawable/bg_dialog_rounded"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/dialog_fairer_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:lineHeight="32sp"
                android:textColor="@color/gray_700"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_fairer_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.36"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:lineHeight="20sp"
                app:layout_constraintTop_toBottomOf="@id/dialog_fairer_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_fairer_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintHeight_percent="0.3"
                android:background="@drawable/main_white_background"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/fairer_dialog_cancel_text"
                android:textColor="@color/highlight"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dialog_fairer_ok_btn"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_fairer_ok_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintHeight_percent="0.3"
                android:background="@drawable/main_white_background"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/fairer_dialog_ok_text"
                android:textColor="@color/highlight"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


