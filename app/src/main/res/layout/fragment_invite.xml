<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.InviteFragment"
        android:background="@drawable/main_white_background">

        <include
            android:id="@+id/invite_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_add_todo_header"/>

        <TextView
            android:id="@+id/invite_main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray_800"
            android:text="@string/invite_main_title"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_header"/>

        <TextView
            android:id="@+id/invite_main_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray_400"
            android:text="@string/invite_main_desc"
            android:lineHeight="20sp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_main_title_tv"/>

        <TextView
            android:id="@+id/invite_sign_highlight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/highlight"
            android:text="@string/invite_sign_highlight"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_main_desc_tv"/>

        <TextView
            android:id="@+id/invite_sign_normal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:text="@string/invite_sign_normal"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/invite_main_desc_tv"
            app:layout_constraintStart_toEndOf="@id/invite_sign_highlight_tv"/>

        <TextView
            android:id="@+id/invite_code_tv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="20sp"
            android:textColor="@color/gray_800"
            android:text="ABCDEFG"
            android:gravity="center"
            android:background="@drawable/bg_normal_box"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/invite_sign_highlight_tv" />

        <View
            android:id="@+id/invite_copy_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_positive_10_box"
            app:layout_constraintBottom_toTopOf="@id/invite_share_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/highlight"
            android:textStyle="bold"
            android:text="@string/invite_btn_text_copy"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/invite_copy_btn"
            app:layout_constraintEnd_toEndOf="@id/invite_copy_btn"
            app:layout_constraintTop_toTopOf="@id/invite_copy_btn"
            app:layout_constraintBottom_toBottomOf="@id/invite_copy_btn"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_copy" />

        <View
            android:id="@+id/invite_share_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_highlight_box"
            app:layout_constraintBottom_toTopOf="@id/invite_skip_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/invite_btn_text_share"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/invite_share_btn"
            app:layout_constraintEnd_toEndOf="@id/invite_share_btn"
            app:layout_constraintTop_toTopOf="@id/invite_share_btn"
            app:layout_constraintBottom_toBottomOf="@id/invite_share_btn"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_share" />

        <View
            android:id="@+id/invite_skip_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray_800"
            android:text="@string/invite_btn_text_skip"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/invite_skip_btn"
            app:layout_constraintBottom_toBottomOf="@id/invite_skip_btn"
            app:layout_constraintStart_toStartOf="@id/invite_skip_btn"
            app:layout_constraintEnd_toEndOf="@id/invite_skip_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>