<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.depromeet.housekeeper.ui.main.MainViewModel" />

        <variable
            name="isSelectRemain"
            type="boolean" />

        <variable
            name="isSelectDone"
            type="boolean" />

        <variable
            name="isEmptyRemain"
            type="boolean" />

        <variable
            name="isEmptyDone"
            type="boolean" />

        <variable
            name="isConnectedNetwork"
            type="boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_white_background"
        tools:context=".ui.main.MainFragment">

        <include
            android:id="@+id/main_header"
            layout="@layout/layout_main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/layoutNetwork"
            layout="@layout/layout_disconnected_network"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:visibility="@{isConnectedNetwork ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{isConnectedNetwork ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_Name"
                style="@style/Title.T1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="56dp"
                android:text="@string/user_name"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/user_name" />

            <TextView
                android:id="@+id/tv_complete_house_chore"
                style="@style/Title.T1"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text="@string/complete_chore"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Name"
                tools:text="@string/complete_chore" />

            <TextView
                android:id="@+id/tv_group_name"
                style="@style/Caption.C1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="4dp"
                android:textColor="#757575"
                app:drawableStartCompat="@drawable/ic_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_complete_house_chore"
                tools:text="즐거운 우리집 5 " />
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_group_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_white_background">
                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="snap|scroll|enterAlways|enterAlwaysCollapsed">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_groups"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="24dp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:itemCount="5"
                                tools:listitem="@layout/item_profile" />
                            <include
                                android:id="@+id/lv_Rule"
                                layout="@layout/layout_rules"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="24dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rv_groups" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.appbar.CollapsingToolbarLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="24dp"
                                android:background="@color/gray_100"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_month"
                                style="@style/Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="43dp"
                                android:drawableStart="@drawable/ic_calendar_today"
                                android:drawablePadding="4dp"
                                android:paddingStart="4dp"
                                android:textColor="@color/gray_900"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2022년 * 4월" />

                            <ImageView
                                android:id="@+id/iv_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:src="@drawable/ic_arrow_left"
                                app:layout_constraintBottom_toBottomOf="@+id/rv_week"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/rv_week"
                                app:tint="@color/gray_600" />

                            <ImageView
                                android:id="@+id/iv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="13dp"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintBottom_toBottomOf="@+id/rv_week"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/rv_week" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_week"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="4dp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toStartOf="@id/iv_right"
                                app:layout_constraintStart_toEndOf="@id/iv_left"
                                app:layout_constraintTop_toBottomOf="@id/tv_month"
                                tools:listitem="@layout/item_day_of_week" />
                            <include
                                android:id="@+id/bt_add_todo"
                                style="@style/Body"
                                layout="@layout/layout_home_add_chore"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="20dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rv_week" />

                            <!-- TODO tv_remain_badge + tv_remain 컴포넌트화 필요-->
                            <TextView
                                android:id="@+id/tv_remain_badge"
                                style="@style/Caption"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:background="@{isSelectRemain ? isEmptyRemain ? @drawable/main_empty_badge : @drawable/main_active_badge : @drawable/main_inactive_badge}"
                                android:gravity="center"
                                android:padding="1dp"
                                android:textColor="@{isSelectRemain ? @color/white : @color/gray_400}"
                                app:layout_constraintBottom_toBottomOf="@id/tv_remain"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_remain"
                                tools:text="0" />

                            <TextView
                                android:id="@+id/tv_remain"
                                style="@style/Title.T1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:text="@string/remained_chore"
                                android:textColor="@{isSelectRemain ? @color/gray_900 : @color/gray_400}"
                                app:layout_constraintStart_toEndOf="@id/tv_remain_badge"
                                app:layout_constraintTop_toBottomOf="@id/bt_add_todo"
                                app:textStyle='@{isSelectRemain ? "bold" : "normal"}'
                                tools:text="@string/remained_chore" />

                            <!-- TODO tv_remain_badge + tv_remain 컴포넌트화 필요-->
                            <TextView
                                android:id="@+id/tv_end_badge"
                                style="@style/Caption"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:layout_marginEnd="8dp"
                                android:background="@{isSelectDone ? isEmptyDone ? @drawable/main_empty_badge : @drawable/main_active_badge : @drawable/main_inactive_badge}"
                                android:gravity="center"
                                android:padding="1dp"
                                android:textColor="@{isSelectDone ? @color/white : @color/gray_400}"
                                app:layout_constraintBottom_toBottomOf="@id/tv_end"
                                app:layout_constraintEnd_toStartOf="@id/tv_end"
                                app:layout_constraintTop_toTopOf="@id/tv_end"
                                tools:text="0" />

                            <TextView
                                android:id="@+id/tv_end"
                                style="@style/Title.T1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="20dp"
                                android:text="@string/completed_chore"
                                android:textColor="@{isSelectDone ? @color/gray_900 : @color/gray_400}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/bt_add_todo"
                                app:textStyle='@{isSelectDone ? "bold" : "normal"}'
                                tools:text="@string/completed_chore" />

                            <include
                                android:id="@+id/layoutEmptyScreen"
                                layout="@layout/layout_home_empty_screen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/tv_end" />

                            <include
                                android:id="@+id/layoutDoneScreen"
                                layout="@layout/layout_home_done_screen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/tv_end" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.AppBarLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_houseWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_housework" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>