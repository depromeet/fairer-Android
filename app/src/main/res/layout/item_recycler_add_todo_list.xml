<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_add_todo_cv"
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_add_todo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/todo_item_selector"
            android:padding="8dp">

            <ImageView
                android:id="@+id/item_add_todo_delete_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_x_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_add_todo_time_tv"
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:text="@string/add_todo_default_time"
                android:textColor="@color/gray_700"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_add_todo_name_tv"
                android:layout_width="77dp"
                android:layout_height="44dp"
                android:layout_marginBottom="4dp"
                android:gravity="bottom"
                android:text="@string/task"
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>