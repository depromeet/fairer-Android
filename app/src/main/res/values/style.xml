<?xml version="1.0" encoding="utf-8"?>
<resources>
  
  <style name="Heading">
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">-0.02</item>
    <item name="android:fontWeight">700</item>
  </style>
  
  <style name="Heading.H1">
    <item name="android:textSize">30sp</item>
    <item name="android:lineHeight">48dp</item>
    <item name="android:lineSpacingExtra">12sp</item>
  </style>
  
  <style name="Heading.H2">
    <item name="android:textSize">24sp</item>
    <item name="android:lineHeight">36dp</item>
    <item name="android:lineSpacingExtra">7sp</item>
  </style>
  
  <style name="Heading.H3">
    <item name="android:textSize">20sp</item>
    <item name="android:lineHeight">25dp</item>
    <item name="android:lineSpacingExtra">1sp</item>
  </style>
  
  <style name="SubTitle">
    <item name="android:textSize">17sp</item>
    <item name="android:lineHeight">22dp</item>
    <item name="android:fontWeight">600</item>
    <item name="android:lineSpacingExtra">1sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>
  
  <style name="Body">
    <item name="android:textSize">15sp</item>
    <item name="android:lineHeight">21dp</item>
    <item name="android:fontWeight">400</item>
    <item name="android:lineSpacingExtra">3sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>
  
  <style name="Caption">
    <item name="android:textSize">13sp</item>
    <item name="android:lineHeight">19dp</item>
    <item name="android:fontWeight">400</item>
    <item name="android:lineSpacingExtra">3sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>

</resources>