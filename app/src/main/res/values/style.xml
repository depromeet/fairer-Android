<?xml version="1.0" encoding="utf-8"?>
<resources>
  
  <style name="Heading">
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">-0.02</item>
    <item name="android:fontWeight">700</item>
  </style>
  
  <style name="Heading.H1">
    <item name="android:textSize">24sp</item>
    <item name="android:lineHeight">48dp</item>
    <item name="android:lineSpacingExtra">12sp</item>
  </style>
  
  <style name="Heading.H2">
    <item name="android:textSize">20sp</item>
    <item name="android:lineHeight">24dp</item>
    <item name="android:lineSpacingExtra">7sp</item>
  </style>
  
  <style name="Heading.H3">
    <item name="android:textSize">20sp</item>
    <item name="android:lineHeight">25dp</item>
    <item name="android:fontWeight">500</item>
    <item name="android:lineSpacingExtra">1sp</item>
  </style>

  <style name="Title">
    <item name="android:fontWeight">600</item>
    <item name="android:lineHeight">22dp</item>
    <item name="android:lineSpacingExtra">1sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>

  <style name="Title.T1">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Title.T2">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Body">
    <item name="android:lineHeight">21dp</item>
    <item name="android:fontWeight">400</item>
    <item name="android:lineSpacingExtra">3sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>

  <style name="Body.B1">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Body.B2">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Caption">
    <item name="android:lineHeight">19dp</item>
    <item name="android:fontWeight">400</item>
    <item name="android:lineSpacingExtra">3sp</item>
    <item name="android:letterSpacing">-0.02</item>
  </style>

  <style name="Caption.C1">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="Caption.C2">
    <item name="android:textSize">10sp</item>
  </style>

  <style name="Caption.regular">

  </style>

</resources>