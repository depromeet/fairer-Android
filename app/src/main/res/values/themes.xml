<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.HouseKeeper" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar & icon color color. -->
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <!-- Customize your theme here. -->
    <!-- Fairer EditText -->
    <item name="android:textCursorDrawable">@color/highlight</item>
    <item name="android:textSelectHandle">@color/highlight</item>
    <item name="colorAccent">@color/highlight</item>
    <item name="android:textColorHighlight">@color/positive_10</item>
  </style>

  <style name="FairerTimePicker">
    <item name="colorControlNormal">@color/highlight</item>
  </style>


</resources>